<h1>Books List:</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Author</th>
          <th>Publication Date</th>
        </tr>
      </thead>
      <tbody id="book-list">
        <%= render @books %>
      </tbody>
    </table>

    <div id="infinite-scrolling">
      <%= will_paginate %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-2 col-md-offset-5">
  <button id="load-more" class="btn btn-primary center-block">load more</button>
  </div>
</div>